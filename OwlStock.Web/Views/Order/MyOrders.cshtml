@model List<Order>

@{
    ViewData["Title"] = "My Orders";
}

<div class="row">
    <div class="col-12 col-md-6 col-lg-4">
        <h4>@ViewData["Title"]</h4>
    </div>
</div>
<div class="row mt-5 mx-auto">
    <div class="col-12 col-md-6 col-lg-12">

        @if (Model.Count == 0)
        {
            <h4 class="text-center">Your orders will be displayed here.</h4>
        }  
        
        else
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Photo</th>
                        <th>Price</th>
                        <th>Size</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (Order order in Model)
                    {

                        <tr>
                            <td>@order.Date</td>
                            <td>@order?.Photo?.Name</td>
                            <td>@order?.Photo?.Price</td>
                            <td>@order?.Photo?.Price</td>
                            <td>@order?.PhotoSize</td>
                        </tr>

                    }

                </tbody>
            </table>
        }
        
    </div>
</div>