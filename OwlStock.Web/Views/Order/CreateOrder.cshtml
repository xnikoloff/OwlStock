@model Order

@{
    ViewData["Title"] = "Order";
}

<div class="container mt-5">
    <div class="row ">
        <div class="col-12 col-md-6 col-lg-4">
            <h4>Order Info</h4>
            <form asp-action="Order" method="POST">
                <div class="form-group">
                    <label asp-for="Date"></label>
                    @Html.TextBox("DateCreated", DateTime.Today.ToShortDateString(), new { @readonly = "readonly", @class = "form-control" })
                    <input type="hidden" asp-for=Date value="@DateTime.Now" />
                </div>
                <div class="form-group">
                    <label asp-for="Photo.Price"></label>
                    <input asp-for="Photo.Price" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Photo.Name"></label>
                    <input asp-for="Photo.Name" class="form-control" />
                </div>
                <button class="btn btn-success">Submit Order</button>
            </form>
        </div>
    </div>
</div>