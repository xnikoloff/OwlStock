@model IEnumerable<PhotoBase>

    @if (Model.Count() == 0)
    {

        <div class="row">
            <div class="col-12 mx-auto text-center">
                <p><i>Your photos will apear here soon :)</i></p>
            </div>
        </div>

    }

    else
    {

        <div class="row mt-5">
        
                @foreach (PhotoBase photo in Model)
                {
                    <form asp-action="DownloadPhoto" asp-controller="Download" method="POST" enctype="multipart/form-data">
                        <input type="hidden" asp-for="@photo.Id"/>
                        <input type="hidden" asp-for="@photo.FileName"/>
                        <input type="hidden" asp-for="@photo.FileType"/>
                        <input type="hidden" asp-for="@photo.FileData"/>
                    </form>

                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="card">
                            <div class="card-body">
                                <img src="~/images/photoshoots/@photo.FileName" />
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-success">Download</button>
                            </div>
                        </div>
                    </div>
                }
        
        </div>
    }

