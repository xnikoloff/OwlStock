@model List<AllPhotosDTO>

@{
    double iterations = Math.Ceiling((double)(Model.Count / 3.0));
    int element = 0;
}

    <div class="row row-gallery">

    @for (int i = 0; i < iterations; i++)
    {
        if(element + 1 > Model.Count|| element + 2 > Model.Count || element + 3 > Model.Count)
        {
            break;
        }

        <div class="column">
                <a asp-controller="Photo" asp-action="PhotoById" asp-route-id="@(Model[element].Id)">
                    <img src="~/images/@(PhotoSize.Small.ToString() + "_" +  Model[element]?.FileName)">
                </a>
                <a asp-controller="Photo" asp-action="PhotoById" asp-route-id="@(Model[element + 1].Id)">
                    <img src="~/images/@(PhotoSize.Small.ToString() + "_" +  Model[element + 1]?.FileName)">
                </a>
                <a asp-controller="Photo" asp-action="PhotoById" asp-route-id="@(Model[element + 2].Id)">
                    <img src="~/images/@(PhotoSize.Small.ToString() + "_" +  Model[element + 2]?.FileName)">
                </a>
                <a asp-controller="Photo" asp-action="PhotoById" asp-route-id="@(Model[element + 3].Id)">
                    <img src="~/images/@(PhotoSize.Small.ToString() + "_" +  Model[element + 3]?.FileName)">
                </a>
            </div>


        element += 3;
    }

    </div>

<style>
    .row-gallery {
        display: flex;
        flex-wrap: wrap;
        padding: 0 4px;
    }
    /* Create four equal columns that sits next to each other */
    .column {
        flex: 25%;
        max-width: 25%;
        padding: 0 4px;
    }

    .column img {
        margin-top: 8px;
        vertical-align: middle;
        width: 100%;
    }

    /* Responsive layout - makes a two column-layout instead of four columns */
    @@media screen and (max-width: 800px) {
        .column {
            flex: 50%;
            max-width: 50%;
        }
    }

    /* Responsive layout - makes the two columns stack on top of each other instead of next to each other */
    @@media screen and (max-width: 600px) {
        .column {
            flex: 100%;
            max-width: 100%;
        }
    }
</style>