@model Place

<div class="container">
    <div class="row my-5">
        <div class="col-12 text-center">
            <h1>@Model.Name</h1>
        </div>
    </div>
    <hr />
    <div class="row mt-4">
        <div class="col-12 col-md-6 col-lg-4">
            <p>@Model.Description</p>
        </div>
        <div class="col-12 col-md-6 col-lg-8 text-center">
            <img src="~/resources/places/@Model.PhotoBase.FileName" style="width:600px" alt="place image" />
        </div>
    </div>
</div>