@model UpdatePhotoShootPhotosDTO

<div class="container mt-5">
    <div class="row">
        <div class="col-12 col-md-6 col-lg-8">
            <h2>Photo shoot for @Model.PersonFullName</h2>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12 col-md-6 col-lg-8">
            <form asp-action="UpdateFiles" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="PhotoShootId"/>
                <input type="hidden" asp-for="PersonFullName"/>
                <div class="form-control">
                    <label asp-for="Files"></label>
                    <input multiple asp-for="Files" class="form-control"/>
                    <span asp-validation-for="Files" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success mt-2">Update Files</button>
            </form>
        </div>
    </div>
</div>