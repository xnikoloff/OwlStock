@model List<MyPhotoShootsDTO>

<div class="container">
    <div class="row">
        <div class="col-12">

            @if(Model.Count == 0)
            {
                <h4 class="mt-5 text-center">Your reservations will apear here</h4>
            }

            else
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Type</th>
                            <th>Created On</th>
                            <th>Reservation For</th>
                        </tr>
                    </thead>

                    @foreach (MyPhotoShootsDTO dto in Model)
                    {
                        <tr>
                            <td>@dto.ReservationDate</td>
                            <td>@dto.PhotoShootType</td>
                            <td>@dto.CreatedOn</td>
                            <td>@dto.ReservationFor</td>
                        </tr>
                    }

                </table>
            }
            
        </div>
    </div>
</div>
