<script>
    $(document).ready(function(){

        $("#PhotoDeliveryMethod").change(function () {
            //2 is USB, 3 is CD 
            if ($('#PhotoDeliveryMethod').find(":selected").val() == 2 ||
                    $('#PhotoDeliveryMethod').find(":selected").val() == 3) {
