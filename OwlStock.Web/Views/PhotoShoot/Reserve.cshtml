            }
        });

        $("#DoNotUploadPhotos").change(function () {
            if (this.checked) {
                console.log()
                $(".delivery-method").css("display", "block");
                $("#PhotoDeliveryMethod").prop('required', true);
            }
            else{

                $(".delivery-method").css("display", "none");
