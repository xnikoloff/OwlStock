            <div class="row row-total-price mt-5">
                <div class="col-12 text-center">
                    <h3>Цена</h3>
                    <h1 class="mt-2"><span id="total-price"></span> <span id="currency"> лв</span></h1>
                </div>
            </div>
        </div>
        <div class="book-container" style="display:none">
        <hr />
            <div class="row mt-2">
                <div class="col-12">
                    <div class="form-group">
                        <input asp-for="DoNotUploadPhotos" />
                        <label asp-for="DoNotUploadPhotos"></label>
                    </div>
                </div>
            </div>
            <div class="row delivery-method" style="display:none">
