@model PhotoShoot

<div class="container">
    <div class="row">
        <div class="col-12 col-md-6 col-lg-4">
            <a asp-action="UpdateFiles">Update Files</a>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-6 col-lg-4 mx-auto text-center">
            <h1>Photo Shoot #@Model.Id</h1>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-12 col-md-6 col-lg-6 mx-auto mt-5">
            <h4 class="mx-auto text-center">Details</h4>
            <table class="table mt-4">
                <thead>
                    <tr>
                        <th>Model</th>
                        <th>PhotoShoot Date</th>
                        <th>PhotoShoot Type</th>
                        <th>Created On</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.PersonFullName</td>
                        <td>@Model.ReservationDate</td>
                        <td>@Model.PhotoShootType</td>
                        <td>@Model.CreatedOn</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="container mt-5">
    <div class="row">
        @if (Model.PhotoShootPhotos.Count == 0)
        {
            <p class="text-center"><i>Your photos will appear here soon :)</i></p>
        }



        else
        {

            <h2 class="text-center mb-3">Photos</h2>
            
            foreach(PhotoShootPhoto photo in Model.PhotoShootPhotos)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <img src="~/images/photoshoots/@photo.FileName">
                        </div>
                        <div class="card-footer">
                            <form asp-action="DownloadPhotoShootPhoto" asp-controller="Download">
                                <input type="hidden" asp-for="@photo.FileName">
                                <input type="hidden" asp-for="@photo.FileType">
                                <input type="hidden" asp-for="@photo.FilePath">

                                <button type="submit" class="btn btn-primary">Download</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
                
        }

    </div>
</div>

<style>
    .card{
        min-height: 300px;
    }
</style>
