@{
    ViewData["Title"] = "Администриране";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12 text-center">
            <h1>Администриране</h1>
        </div>
    </div>
    <div class="row text-center mt-5">
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card">
                <div class="card-header">
                    <i class="fa-solid fa-camera fa-2x"></i>
                </div>
                <div class="card-body">
                    <a asp-controller="Administration" asp-action="Photoshoots"><h2>Фотосесии</h2></a>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card">
                <div class="card-header">
                    <i class="fa-solid fa-image fa-2x"></i>
                </div>
                <div class="card-body">
                    <a asp-controller="Administration" asp-action="Photos"><h2>Снимки</h2></a>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card">
                <div class="card-header">
                    <i class="fa-solid fa-user fa-2x"></i>
                </div>
                <div class="card-body">
                    <a asp-controller="Administration" asp-action="AllUsers"><h2>Потребители</h2></a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    a{
        text-decoration: none;
    }
</style>