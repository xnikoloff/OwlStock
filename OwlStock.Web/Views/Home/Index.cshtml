@model List<GalleryPhoto>

@{
    ViewData["Title"] = "Home page";
}

<div class="container-fluid banner-container">
    <div class="row">
        <div class="col-12 wrapper">
            <div class="banner mx-auto text-center">
                <div class="text-wrapper">
                    <h1 class="text-white mt-4">FlashPix</h1>
                    <h4 class="text-white">ФОТОГРАФСКО СТУДИО</h4>
                    <a asp-controller="Photoshoot" asp-action="Reserve" class="btn btn-lg btn-warning font-weight-bold mt-4">Резервация</a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid icons-container">
    <div class="row">
        <div class="col-12 col-md-6 col-lg-3 icons-column">
            <span class="icon"><i class="fa-solid fa-camera fa-2xl"></i></span>
            <h4 class="icon-text">Услуги</h4>
        </div>
        <div class="col-12 col-md-6 col-lg-3 icons-column">
            <span class="icon"><i class="fa-solid fa-coins fa-2xl"></i></span>
            <h4 class="icon-text">Цени</h4>
        </div>
        <div class="col-12 col-md-6 col-lg-3 icons-column">
            <span class="icon"><i class="fa-solid fa-images fa-2xl"></i></span>
            <h4 class="icon-text">Галерия</h4>
        </div>
        <div class="col-12 col-md-6 col-lg-3 icons-column">
            <span class="icon"><i class="fa-solid fa-bolt-lightning fa-2xl"></i></span>
            <h4 class="icon-text">За нас</h4>
        </div>
    </div>
</div>

<style>
    .banner-container{
        /*bottom only*/
        box-shadow: 0 8px 5px -5px #333;
    }

    .banner {
        margin-top: 100px;
    }

    .banner h1 {
        font-size: 6rem;
    }

    .banner .btn:hover {
        cursor: pointer;
    }

    .wrapper {
        background-image: url('@(ViewBag.HomePhoto)');
        background-size: cover;
        height: 90vh;
        backdrop-filter: brightness(30%);
    }

    .text-wrapper{
        width: 60%;
        margin: 0 auto;
        padding: 40px 20px;
        background: rgba(0, 0, 0, 0.5);
        border-radius: 10px;

    }

    .icons-container {
        padding: 150px 0;
    }

    .icons-container .icons-column {
        margin: 0 auto;
        text-align: center;
    }

    .icons-container .icons-column .icon-text {
        margin-top: 20px;
    }
</style>