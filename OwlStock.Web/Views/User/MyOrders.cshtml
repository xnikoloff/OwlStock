@model List<Order>

@{
    ViewData["Title"] = "My Orders";
}

<div class="row">
    <div class="col-12 col-md-6 col-lg-4">
        <h4>@ViewData["Title"]</h4>
    </div>
</div>
<div class="row mt-5">
    <div class="col-12 col-md-6 col-lg-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Photo</th>
                    <th>Price</th>
                    <th>Size</th>
                </tr>
            </thead>
            <tbody>

                @if (Model.Count == 0)
                {
                    <tr class="mt-5">
                        <td class="fw-bold">Your orders will be displayed here.</td>
                    </tr>
                }

                else
                {
                    foreach (Order order in Model)
                    {   

                        <tr>
                            <td>@order.Date</td>
                            <td>@order?.Photo?.Name</td>
                            <td>@order?.Photo?.Price</td>
                            <td>@order?.Photo?.Price</td>
                            <td>@order?.PhotoSize</td>
                        </tr>

                    }
                }

            </tbody>
        </table>
    </div>
</div>